<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#F6F6F6"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="大爷，快来玩啊~"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/touxiang"
            android:textSize="20sp"
            android:padding="20dp"
            android:drawablePadding="10dp"
            android:background="#FFFFFF"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            />

        <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="4"
            android:columnWidth="90dp"
            android:stretchMode="columnWidth"
            android:background="#FFFFFF"
            />
        <TextView
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:layout_marginTop="10dp"
            android:text="个人信息"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textColor="#000000"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/userMessage"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="消息中心"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/file_Manager"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:layout_marginTop="10dp"
            android:text="文件管理"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:clickable="true"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/userHistory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="历史记录"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"

            android:clickable="true"
            />
        <TextView
            android:id="@+id/line4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/userCollect"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="我的收藏"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/feedBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:layout_marginTop="10dp"
            android:text="意见反馈"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/userSet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_selector"
            android:text="设置"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:drawableRight="@mipmap/more"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/region"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#F6F6F6"
            />
    </LinearLayout>


</ScrollView>
