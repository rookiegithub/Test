<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/guanbi_left"
        android:src="@mipmap/guanbi"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号登录"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="75dp"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="175dp"/>

    <EditText
        android:id="@+id/userPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="#00ff00ff"
        android:layout_alignBottom="@+id/phone"
        android:textColorHint="#CCCCCC"
        android:hint="输入您的手机号码"
        android:textSize="15sp"
        android:maxLength="11"
        android:textCursorDrawable="@null"
        android:inputType="number"/>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="205dp"/>
    <TextView
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="230dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="#00ff00ff"
        android:layout_alignBottom="@+id/pwd"
        android:textColorHint="#CCCCCC"
        android:hint="输入您的密码"
        android:textCursorDrawable="@null"
        android:textSize="15sp"
        android:maxLength="18"
        android:id="@+id/editText"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="260dp"/>
    <TextView
        android:id="@+id/forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3ca6fe"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/line1"
        android:text="忘记密码?"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/skip_register"
        android:text="没有账号，马上"
        android:layout_marginRight="3dp"
        android:layout_alignBottom="@+id/forget_pwd" />
    <TextView
        android:id="@+id/skip_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3ca6fe"
        android:textSize="16sp"
        android:layout_alignRight="@+id/line1"
        android:layout_alignBottom="@+id/no_account"
        android:text="注册"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3ca6fe"
        android:layout_below="@+id/forget_pwd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:text="允许进入"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
