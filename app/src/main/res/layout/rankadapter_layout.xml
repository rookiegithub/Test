<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_splitline"
   >

    <TextView

        android:layout_marginLeft="10dp"
        android:id="@+id/end_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完本排行榜"
        android:textColor="#000000"
        android:textSize="17sp"
        android:paddingTop="20dp"
        />
    <TextView
        android:id="@+id/end_bookInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="就要看完本，一看到底"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/end_book"
        android:textSize="12sp"
        android:layout_below="@+id/end_book"
        android:paddingBottom="20dp"/>
<ImageView
    android:id="@+id/title_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/paihang"
    android:layout_marginTop="15dp"
    android:layout_toRightOf="@+id/end_book"
    android:layout_marginLeft="33dp"
    />

</RelativeLayout>
