<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <!--<RelativeLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/btn_no_backgound"-->

        <!--&gt;-->
        <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/images"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"


        />

        <TextView
        android:id="@+id/book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/images"
        android:layout_toRightOf="@+id/images"
        android:layout_marginTop="5dp"
        />

        <TextView
        android:id="@+id/book_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/book_name"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_alignLeft="@+id/book_name"
        android:layout_marginTop="5dp"

        />
    <ImageView
        android:id="@+id/touxiang"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/touxiang"
        android:layout_alignBottom="@+id/images"
        android:layout_alignLeft="@+id/book_name"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/touxiang"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:paddingBottom="3dp"
        android:layout_alignBottom="@+id/touxiang"
        />

</RelativeLayout>