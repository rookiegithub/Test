<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/guanbi_left"
        android:src="@mipmap/guanbi"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#000000"
        android:layout_marginTop="17dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/text_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="115dp"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="#00ff00ff"
        android:layout_alignBottom="@+id/text_phone"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:textColorHint="#CCCCCC"
        android:hint="输入您的手机号码"
        android:textSize="15sp"
        android:maxLength="11"
        android:inputType="number"/>
    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="145dp"/>

    <TextView
        android:id="@+id/text_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证码"
        android:textColor="#000000"
        android:layout_below="@+id/line"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="#00ff00ff"
        android:layout_alignBottom="@+id/text_verify"
        android:textColorHint="#CCCCCC"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:hint="输入手机验证码"
        android:textSize="15sp"
        android:maxLength="6"
        android:inputType="number"/>
    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/verify"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/line1"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:background="#00ff00ff"
        android:layout_alignBottom="@+id/pwd"
        android:textColorHint="#CCCCCC"
        android:textCursorDrawable="@color/colorPrimaryDark"
        android:hint="输入您的密码"
        android:textSize="15sp"
        android:maxLength="18"
        android:id="@+id/editText"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/pwd"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/send_verify"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#3ca6fe"
        android:layout_alignBottom="@+id/verify"
        android:layout_alignRight="@+id/skip_login"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:text="获取验证码"
        android:background="@drawable/fistpage_selector"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_toLeftOf="@+id/skip_login"
        android:layout_below="@+id/line2"
        android:text="已有账号，马上"
        android:layout_marginRight="3dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/skip_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3ca6fe"
        android:textSize="16sp"
        android:layout_alignRight="@+id/line1"
        android:layout_alignBottom="@+id/text_account"
        android:text="登录"
        android:layout_marginRight="5dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3ca6fe"
        android:layout_below="@+id/skip_login"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:text="允许进入"
        android:textSize="16sp"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
