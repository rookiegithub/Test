<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:text="特色专题"
        android:drawableLeft="@mipmap/message"
        android:textColor="#000000"
        android:textSize="15sp"
        android:padding="10dp"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />
    <TextView
        android:id="@+id/line2"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        />
    <ImageView
        android:id="@+id/rankPrefecture"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/line2"
        android:layout_margin="15dp"
        android:src="@mipmap/logo_60x60"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/text_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书链教育"
        android:layout_toRightOf="@+id/rankPrefecture"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignTop="@+id/rankPrefecture"
        android:layout_margin="8dp"
        />
    <TextView
        android:id="@+id/rankBookInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="题目有深度，书链带你看懂细枝末节~"
        android:layout_below="@+id/text_head"
        android:textSize="10sp"
        android:gravity="center_vertical"

        android:layout_alignLeft="@+id/text_head"/>
    <TextView
        android:id="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/rankBookInfo"
        android:background="#DCDCDC"
        />
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_below="@+id/line3"
        android:columnWidth="90dp"
        android:stretchMode="columnWidth"
        android:background="#FFFFFF"
        />
</RelativeLayout>
